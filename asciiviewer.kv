#:kivy 1.0.9

<AsciiViewer>:
    TextWidget:

<TextWidget>:
    RelativeLayout:
        size: root.size
        BoxLayout
            size_hint: None, 0.064
            pos: root.x, root.height-self.height
            Button:
                id: button1
                size_hint: None, None
                size: root.width * 0.200, root.height * 0.064
                text: "Set capture area"
                on_release: root.change_text()
            Button:
                id: button2
                size_hint: None, None
                size: root.width * 0.128, root.height * 0.064
                text: "Capture"
                on_release: root.screenShot()
        Label:
            id: label1
            spacing: 100
            text_size: self.size
            font_size: 10
            font_name: 'CONSOLA'
            text: root.random_number